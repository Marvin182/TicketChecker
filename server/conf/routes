# Home page
GET		/                           de.mritter.ticketchecker.server.Application.index
GET		/api                        de.mritter.ticketchecker.server.Application.api(name: String = "marvin", password: String = "")
GET		/login                      de.mritter.ticketchecker.server.Application.login(name: String, password: String)
GET		/logout                     de.mritter.ticketchecker.server.Application.logout

# Map static resources from the /public folder to the /assets URL path
GET		/assets/*file              controllers.Assets.at(path = "/public", file)
